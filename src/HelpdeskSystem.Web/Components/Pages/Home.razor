@page "/"

<PageTitle>Home - Helpdesk System</PageTitle>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center py-5">
                <h1 class="display-4 mb-4">
                    <i class="bi bi-headset text-primary"></i>
                </h1>
                <h1 class="display-5 fw-bold">Helpdesk Ticket System</h1>
                <p class="lead text-muted mb-5">
                    A comprehensive solution for managing support tickets, tracking issues, and analyzing performance metrics.
                </p>

                <AuthorizeView>
                    <Authorized>
                        <div class="row g-4 justify-content-center">
                            <div class="col-md-4">
                                <a href="tickets" class="text-decoration-none">
                                    <div class="card h-100 shadow-sm border-0 bg-primary text-white">
                                        <div class="card-body text-center py-4">
                                            <i class="bi bi-ticket-detailed fs-1 mb-3"></i>
                                            <h5 class="card-title">View Tickets</h5>
                                            <p class="card-text small">Browse and manage support tickets</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="tickets/create" class="text-decoration-none">
                                    <div class="card h-100 shadow-sm border-0 bg-success text-white">
                                        <div class="card-body text-center py-4">
                                            <i class="bi bi-plus-circle fs-1 mb-3"></i>
                                            <h5 class="card-title">Create Ticket</h5>
                                            <p class="card-text small">Submit a new support request</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="dashboard" class="text-decoration-none">
                                    <div class="card h-100 shadow-sm border-0 bg-info text-white">
                                        <div class="card-body text-center py-4">
                                            <i class="bi bi-graph-up fs-1 mb-3"></i>
                                            <h5 class="card-title">Dashboard</h5>
                                            <p class="card-text small">View analytics and reports</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="Account/Login" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Login
                            </a>
                            <a href="Account/Register" class="btn btn-outline-primary btn-lg px-5">
                                <i class="bi bi-person-plus me-2"></i>Register
                            </a>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
            </div>

            <div class="row g-4 mt-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-lightning-charge text-warning fs-1 mb-3"></i>
                            <h5>Fast Response</h5>
                            <p class="text-muted small">Quick ticket processing and resolution tracking</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-bar-chart-line text-success fs-1 mb-3"></i>
                            <h5>Analytics</h5>
                            <p class="text-muted small">Comprehensive dashboard with real-time metrics</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-people text-info fs-1 mb-3"></i>
                            <h5>Team Management</h5>
                            <p class="text-muted small">Role-based access with agent assignment</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
