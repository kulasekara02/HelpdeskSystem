@page "/tickets/{Id}"
@attribute [Authorize]
@inject ITicketService TicketService
@inject ICommentService CommentService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@rendermode InteractiveServer

<PageTitle>Ticket Details - Helpdesk System</PageTitle>

@if (_isLoading)
{
    <div class="d-flex justify-content-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (_ticket == null)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle me-2"></i>Ticket not found.
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="tickets">Tickets</a></li>
                    <li class="breadcrumb-item active">@_ticket.Id[..8]...</li>
                </ol>
            </nav>
            <h3 class="mb-2">@_ticket.Title</h3>
            <div class="d-flex gap-2 align-items-center">
                <TicketStatusBadge Status="_ticket.Status" />
                <PriorityBadge Priority="_ticket.Priority" />
                <small class="text-muted">Created @_ticket.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
            </div>
        </div>
        <div>
            <a href="tickets/edit/@Id" class="btn btn-outline-primary">
                <i class="bi bi-pencil me-2"></i>Edit
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Description -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-file-text me-2"></i>Description</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0" style="white-space: pre-wrap;">@_ticket.Description</p>
                </div>
            </div>

            <!-- Comments -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-chat-dots me-2"></i>Comments (@_ticket.Comments.Count)</h5>
                </div>
                <div class="card-body">
                    <!-- Add comment form -->
                    <div class="mb-4">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Add a comment..."
                                   @bind="_newComment" @bind:event="oninput" @onkeyup="HandleCommentKeyUp" />
                            <button class="btn btn-primary" @onclick="AddCommentAsync" disabled="@_isAddingComment">
                                @if (_isAddingComment)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status"></span>
                                }
                                else
                                {
                                    <i class="bi bi-send"></i>
                                }
                            </button>
                        </div>
                    </div>

                    @if (!_ticket.Comments.Any())
                    {
                        <p class="text-muted text-center py-3">No comments yet.</p>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var comment in _ticket.Comments)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between">
                                        <strong>@comment.CreatedByUserName</strong>
                                        <small class="text-muted">@comment.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                    </div>
                                    <p class="mb-0 mt-2">@comment.Text</p>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Status History -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Status History</h5>
                </div>
                <div class="card-body">
                    @if (!_ticket.StatusHistory.Any())
                    {
                        <p class="text-muted text-center py-3">No status changes recorded.</p>
                    }
                    else
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var history in _ticket.StatusHistory)
                            {
                                <li class="d-flex align-items-start mb-3">
                                    <div class="me-3">
                                        <span class="badge bg-secondary rounded-circle p-2">
                                            <i class="bi bi-arrow-right"></i>
                                        </span>
                                    </div>
                                    <div>
                                        <div>
                                            @if (history.OldStatus.HasValue)
                                            {
                                                <span class="badge bg-secondary me-1">@history.OldStatus</span>
                                                <i class="bi bi-arrow-right mx-1"></i>
                                            }
                                            <span class="badge bg-primary">@history.NewStatus</span>
                                        </div>
                                        <small class="text-muted">
                                            by @history.ChangedByUserName on @history.ChangedAt.ToString("MMM dd, yyyy HH:mm")
                                        </small>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Ticket Info -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5 text-muted">Ticket ID</dt>
                        <dd class="col-sm-7"><code>@_ticket.Id[..8]</code></dd>

                        <dt class="col-sm-5 text-muted">Created By</dt>
                        <dd class="col-sm-7">@_ticket.CreatedByUserName</dd>

                        <dt class="col-sm-5 text-muted">Assigned To</dt>
                        <dd class="col-sm-7">@(_ticket.AssignedAgentName ?? "Unassigned")</dd>

                        <dt class="col-sm-5 text-muted">Created</dt>
                        <dd class="col-sm-7">@_ticket.CreatedAt.ToString("MMM dd, yyyy")</dd>

                        @if (_ticket.UpdatedAt.HasValue)
                        {
                            <dt class="col-sm-5 text-muted">Updated</dt>
                            <dd class="col-sm-7">@_ticket.UpdatedAt.Value.ToString("MMM dd, yyyy")</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string Id { get; set; } = string.Empty;

    private TicketDetailsDto? _ticket;
    private bool _isLoading = true;
    private string _newComment = string.Empty;
    private bool _isAddingComment = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadTicketAsync();
    }

    private async Task LoadTicketAsync()
    {
        _isLoading = true;
        _ticket = await TicketService.GetTicketByIdAsync(Id);
        _isLoading = false;
    }

    private async Task AddCommentAsync()
    {
        if (string.IsNullOrWhiteSpace(_newComment)) return;

        _isAddingComment = true;

        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

            if (!string.IsNullOrEmpty(userId))
            {
                await CommentService.AddCommentAsync(new CreateCommentDto
                {
                    TicketId = Id,
                    Text = _newComment
                }, userId);

                _newComment = string.Empty;
                await LoadTicketAsync();
            }
        }
        finally
        {
            _isAddingComment = false;
        }
    }

    private async Task HandleCommentKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await AddCommentAsync();
        }
    }
}
