@page "/admin/users"
@attribute [Authorize(Roles = "Admin")]
@inject IUserService UserService
@rendermode InteractiveServer

<PageTitle>User Management - Helpdesk System</PageTitle>

<h3 class="mb-4">
    <i class="bi bi-people me-2"></i>User Management
</h3>

@if (_isLoading)
{
    <div class="d-flex justify-content-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Assigned Tickets</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in _users)
                    {
                        <tr class="align-middle">
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                @foreach (var role in user.Roles)
                                {
                                    var badgeClass = role switch
                                    {
                                        "Admin" => "bg-danger",
                                        "Agent" => "bg-primary",
                                        _ => "bg-secondary"
                                    };
                                    <span class="badge @badgeClass me-1">@role</span>
                                }
                            </td>
                            <td>@user.AssignedTicketsCount</td>
                            <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => OpenEditModal(user)">
                                    <i class="bi bi-pencil me-1"></i>Edit Roles
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Edit Roles Modal -->
    @if (_selectedUser != null)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Roles - @_selectedUser.FullName</h5>
                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-check mb-2">
                            <input type="checkbox" class="form-check-input" id="roleAdmin"
                                   checked="@_selectedRoles.Contains("Admin")"
                                   @onchange="e => ToggleRole(\"Admin\", (bool)e.Value!)" />
                            <label class="form-check-label" for="roleAdmin">
                                <span class="badge bg-danger">Admin</span>
                                <small class="text-muted ms-2">Full system access</small>
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input type="checkbox" class="form-check-input" id="roleAgent"
                                   checked="@_selectedRoles.Contains("Agent")"
                                   @onchange="e => ToggleRole(\"Agent\", (bool)e.Value!)" />
                            <label class="form-check-label" for="roleAgent">
                                <span class="badge bg-primary">Agent</span>
                                <small class="text-muted ms-2">Can manage tickets</small>
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input type="checkbox" class="form-check-input" id="roleUser"
                                   checked="@_selectedRoles.Contains("User")"
                                   @onchange="e => ToggleRole(\"User\", (bool)e.Value!)" />
                            <label class="form-check-label" for="roleUser">
                                <span class="badge bg-secondary">User</span>
                                <small class="text-muted ms-2">Can create and view tickets</small>
                            </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                        <button type="button" class="btn btn-primary" @onclick="SaveRolesAsync" disabled="@_isSaving">
                            @if (_isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            }
                            Save Changes
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

@code {
    private List<UserWithRolesDto> _users = new();
    private UserWithRolesDto? _selectedUser;
    private HashSet<string> _selectedRoles = new();
    private bool _isLoading = true;
    private bool _isSaving = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsersAsync();
    }

    private async Task LoadUsersAsync()
    {
        _isLoading = true;
        _users = await UserService.GetAllUsersAsync();
        _isLoading = false;
    }

    private void OpenEditModal(UserWithRolesDto user)
    {
        _selectedUser = user;
        _selectedRoles = new HashSet<string>(user.Roles);
    }

    private void CloseModal()
    {
        _selectedUser = null;
        _selectedRoles.Clear();
    }

    private void ToggleRole(string role, bool isChecked)
    {
        if (isChecked)
            _selectedRoles.Add(role);
        else
            _selectedRoles.Remove(role);
    }

    private async Task SaveRolesAsync()
    {
        if (_selectedUser == null) return;

        _isSaving = true;
        try
        {
            await UserService.UpdateUserRolesAsync(new UpdateUserRolesDto
            {
                UserId = _selectedUser.Id,
                Roles = _selectedRoles.ToList()
            });

            await LoadUsersAsync();
            CloseModal();
        }
        finally
        {
            _isSaving = false;
        }
    }
}
